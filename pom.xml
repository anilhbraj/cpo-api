      <unsubscribe>cpo-users-unsubscribe@lists.sourceforge.net</unsubscribe>
      <post>cpo-users@lists.sourceforge.net</post>
      <archive>http://lists.sourceforge.net/mailman/listinfo/cpo-users</archive>
    </mailingList>
  </mailingLists>
  <developers>
