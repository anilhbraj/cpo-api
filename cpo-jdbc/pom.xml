<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.synchronoss.cpo</groupId>
  <artifactId>cpo-jdbc</artifactId>
  <name>cpo-jdbc</name>
  <version>5.0.0-SNAPSHOT</version>
  <parent>
    <groupId>org.synchronoss.cpo</groupId>
    <artifactId>cpo</artifactId>
    <version>5.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <description>CPO is a persistence layer that is thin wrapper around JDBC that consumes and
    produces POJOs
  </description>
  <properties>
    <oracleVersion>10.2.0.5</oracleVersion>
    <mysqlVersion>5.1.16</mysqlVersion>
    <hsqldbVersion>2.2.8</hsqldbVersion>
    <postgresVersion>9.0-801.jdbc4</postgresVersion>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <arguments>${release.arguments}</arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>org/synchronoss/cpo/jdbc/BigBatchTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
       <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xmlbeans-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.synchronoss.cpo</groupId>
      <artifactId>cpo-core</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.j2ee</groupId>
      <artifactId>j2ee</artifactId>
    </dependency>
    
    <!-- Oracle is provided because of the oracle transforms -->
    <dependency>
      <groupId>com.oracle</groupId>
      <artifactId>ojdbc14</artifactId>
      <version>${oracleVersion}</version>
      <scope>provided</scope>
    </dependency>
    
    <!-- database drivers for testing -->
    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>${postgresVersion}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>${hsqldbVersion}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>${mysqlVersion}</version>
      <scope>test</scope>
    </dependency>
    
    <!-- log4j implementation for test logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.xmlbeans</groupId>
      <artifactId>xmlbeans</artifactId>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>mysql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>cpo.db</name>
          <value>mysql</value>
        </property>
      </activation>
      <properties>
        <release.arguments>-Dcpo.db=${cpo.db}</release.arguments>
        <cpo.test.sqldir>src/test/sql/mysql</cpo.test.sqldir>
        <cpo.db.user>cpo</cpo.db.user>
        <cpo.db.pswd>cpo</cpo.db.pswd>
        <cpo.db.host>localhost</cpo.db.host>
        <cpo.db.port>3306</cpo.db.port>
        <cpo.db.database>cpo</cpo.db.database>
        <cpo.db.url>jdbc:mysql://${cpo.db.host}:${cpo.db.port}/${cpo.db.database}?noAccessToProcedureBodies=true&amp;useCursorFetch=true&amp;defaultFetchSize=0</cpo.db.url>
        <cpo.db.userurl>jdbc:mysql://${cpo.db.host}:${cpo.db.port}/${cpo.db.database}?user=${cpo.db.user}&amp;password=${cpo.db.pswd}&amp;noAccessToProcedureBodies=true&amp;useCursorFetch=true&amp;defaultFetchSize=0</cpo.db.userurl>
        <cpo.db.driver>com.mysql.jdbc.Driver</cpo.db.driver>
        <cpo.db.blobssupported>true</cpo.db.blobssupported>
        <cpo.db.callssupported>true</cpo.db.callssupported>
        <cpo.db.select4update>true</cpo.db.select4update>
        <cpo.db.millisupport>false</cpo.db.millisupport>
        <cpo.db.class>com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource</cpo.db.class>        
        <cpo.valueMeta.xml>/mysqlValueMetaData.xml</cpo.valueMeta.xml>
        <cpo.lobMeta.xml>/mysqlLobMetaData.xml</cpo.lobMeta.xml>
      </properties>
    </profile>
    <profile>
      <id>oracle</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>!cpo.db</name>
        </property>
      </activation>
       <properties>
        <cpo.test.sqldir>src/test/sql/oracle</cpo.test.sqldir>
        <cpo.db.user>cpo</cpo.db.user>
        <cpo.db.pswd>cpo</cpo.db.pswd>
        <cpo.db.host>pabetdd01v1.sncrcorp.net</cpo.db.host>
        <cpo.db.port>1521</cpo.db.port>
        <cpo.db.database>dcig1</cpo.db.database>
        <cpo.db.url>jdbc:oracle:thin:@${cpo.db.host}:${cpo.db.port}:${cpo.db.database}</cpo.db.url>
        <cpo.db.userurl>jdbc:oracle:thin:${cpo.db.user}/${cpo.db.pswd}@${cpo.db.host}:${cpo.db.port}:${cpo.db.database}</cpo.db.userurl>
        <cpo.db.driver>oracle.jdbc.driver.OracleDriver</cpo.db.driver>
        <cpo.db.blobssupported>true</cpo.db.blobssupported>
        <cpo.db.callssupported>true</cpo.db.callssupported>
        <cpo.db.select4update>true</cpo.db.select4update>
        <cpo.db.millisupport>true</cpo.db.millisupport>
        <cpo.db.class>oracle.jdbc.pool.OracleConnectionPoolDataSource</cpo.db.class>        
        <cpo.valueMeta.xml>/oracleValueMetaData.xml</cpo.valueMeta.xml>
        <cpo.lobMeta.xml>/oracleLobMetaData.xml</cpo.lobMeta.xml>
      </properties>
    </profile>
    <profile>
      <id>hsqldb</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>cpo.db</name>
          <value>hsqldb</value>
        </property>
      </activation>
      <properties>
        <release.arguments>-Dcpo.db=${cpo.db}</release.arguments>
        <cpo.test.sqldir>src/test/sql/hsqldb</cpo.test.sqldir>
        <cpo.db.user>cpo</cpo.db.user>
        <cpo.db.pswd>cpo</cpo.db.pswd>
        <cpo.db.host>localhost</cpo.db.host>
        <cpo.db.port />
        <cpo.db.database>cpo</cpo.db.database>
        <cpo.db.url>jdbc:hsqldb:hsql://${cpo.db.host}/${cpo.db.database}</cpo.db.url>
        <cpo.db.userurl>jdbc:hsqldb:hsql://${cpo.db.host}/${cpo.db.database};user=${cpo.db.user};password=${cpo.db.pswd}</cpo.db.userurl>
        <cpo.db.driver>org.hsqldb.jdbcDriver</cpo.db.driver>
        <cpo.db.blobssupported>true</cpo.db.blobssupported>
        <cpo.db.callssupported>true</cpo.db.callssupported>
        <cpo.db.select4update>false</cpo.db.select4update>
        <cpo.db.millisupport>true</cpo.db.millisupport>
        <cpo.db.class>org.hsqldb.jdbc.JDBCDataSource</cpo.db.class>
        <cpo.valueMeta.xml>/hsqldbValueMetaData.xml</cpo.valueMeta.xml>
        <cpo.lobMeta.xml>/hsqldbLobMetaData.xml</cpo.lobMeta.xml>
      </properties>
    </profile>
    <profile>
      <id>hsqldbfile</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>cpo.db</name>
          <value>hsqldbfile</value>
        </property>
      </activation>
      <properties>
        <release.arguments>-Dcpo.db=${cpo.db}</release.arguments>
        <cpo.test.sqldir>src/test/sql/hsqldb</cpo.test.sqldir>
        <cpo.db.user>sa</cpo.db.user>
        <cpo.db.pswd />
        <cpo.db.host>localhost</cpo.db.host>
        <cpo.db.port />
        <cpo.db.database>src/test/sql/hsqldb/db/cpo</cpo.db.database>
        <cpo.db.url>jdbc:hsqldb:file:${cpo.db.database}</cpo.db.url>
        <cpo.db.userurl>jdbc:hsqldb:file:${cpo.db.database};shutdown=true;user=${cpo.db.user};password=${cpo.db.pswd}</cpo.db.userurl>
        <cpo.db.driver>org.hsqldb.jdbcDriver</cpo.db.driver>
        <cpo.db.blobssupported>false</cpo.db.blobssupported>
        <cpo.db.callssupported>false</cpo.db.callssupported>
        <cpo.db.select4update>false</cpo.db.select4update>
        <cpo.db.millisupport>true</cpo.db.millisupport>
        <cpo.db.class>org.hsqldb.jdbc.JDBCDataSource</cpo.db.class>
        <cpo.valueMeta.xml>/hsqldbValueMetaData.xml</cpo.valueMeta.xml>
        <cpo.lobMeta.xml>/hsqldbLobMetaData.xml</cpo.lobMeta.xml>
      </properties>
    </profile>
    <profile>
      <id>postgres</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>cpo.db</name>
          <value>postgres</value>
        </property>
      </activation>
      <properties>
        <release.arguments>-Dcpo.db=${cpo.db}</release.arguments>
        <cpo.test.sqldir>src/test/sql/postgres</cpo.test.sqldir>
        <cpo.db.user>cpo</cpo.db.user>
        <cpo.db.pswd>cpo</cpo.db.pswd>
        <cpo.db.host>localhost</cpo.db.host>
        <cpo.db.port>5432</cpo.db.port>
        <cpo.db.database>cpo</cpo.db.database>
        <cpo.db.url>jdbc:postgresql://${cpo.db.host}:${cpo.db.port}/${cpo.db.database}</cpo.db.url>
        <cpo.db.userurl>jdbc:postgresql://${cpo.db.host}:${cpo.db.port}/${cpo.db.database}?user=${cpo.db.user}&amp;password=${cpo.db.pswd}&amp;stringtype=unspecified</cpo.db.userurl>
        <cpo.db.driver>org.postgresql.Driver</cpo.db.driver>
        <cpo.db.blobssupported>false</cpo.db.blobssupported>
        <cpo.db.callssupported>true</cpo.db.callssupported>
        <cpo.db.select4update>true</cpo.db.select4update>
        <cpo.db.millisupport>true</cpo.db.millisupport>
        <cpo.valueMeta.xml>/postgresValueMetaData.xml</cpo.valueMeta.xml>
        <cpo.lobMeta.xml>/postgresLobMetaData.xml</cpo.lobMeta.xml>
      </properties>
    </profile>
  </profiles>
</project>
